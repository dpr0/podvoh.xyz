section.has-text-center.has-text-white-50
  .container
    .columns
      .column.is-4
        p.title Производители
      .column.is-4
        h3.subtitle Модели
    .columns
      - @manufacturers.each do |manufacturer|
        .column.is-4
          .card
            header.card-header
              p.card-header-title
                = manufacturer.name
              a.card-header-icon aria-label=("more options") href="#"
                span class="flag-icon flag-icon-#{manufacturer.country}"
            .card-content
              .content style="height: 180px"
                = link_to manufacturer_path(manufacturer.id) do
                  = image_tag "manufacturers/logo/#{manufacturer.code}.jpg", width: 250
              ul
                - @items[manufacturer.id].each do |item|
                  li
                    = link_to item.name, section_category_subcategory_item_path(Section.podvoh, @category.id, @subcategory.id, item.id)
